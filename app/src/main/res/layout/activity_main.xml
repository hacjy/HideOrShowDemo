<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />


        <TextView
            android:id="@+id/tv_chick"
            android:text="点击屏幕"
            style="@style/mTextStyle" />

        <TextView
            android:id="@+id/tv_scrollview"
            android:text="滑动ScrollView"
            style="@style/mTextStyle" />

        <TextView
            android:id="@+id/tv_recyclerview"
            android:text="滑动RecyclerView"
            style="@style/mTextStyle" />

        <TextView
            android:id="@+id/tv_webview"
            android:text="滑动WebView"
            style="@style/mTextStyle" />

    <TextView
        android:id="@+id/tv_behavior"
        android:text="CoordinatorLayout + 自定义Behavior"
        style="@style/mTextStyle" />


</LinearLayout>
